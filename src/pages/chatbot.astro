---
import BaseLayout from '../layouts/BaseLayout.astro'
import ContactCTA from '../components/ContactCTA.astro'
import Hero from '../components/Hero.astro'
import profile from '../../netlify/functions/profile.json'
---

<BaseLayout
  title="Juan's personal ChatBot assistant"
  description="Personal ChatBot using Google's Gemini API and Netlify functions"
>
  <div class="stack gap-20">
    <main class="wrapper chatbot">
      <header class="hero">
        <Hero
          title="ChatBot"
          tagline="Hi, I'm Juan's personal ChatBot assistant ^^"
          align="start"
        />
      </header>
      <section>
        <h1 class="section-title">
          <img
            src="/assets/chatbot.webp"
            alt="ChatBot icon"
            class="chat-icon"
          />
        </h1>
        <div class="content">
          <!-- Chat Container -->
          <div class="chat-container">
            <!-- The ChatBot UI -->
            <form id="chat-form" class="chat-form">
              <textarea
                id="message"
                name="message"
                required
                rows="3"
                placeholder="e.g. Tell me about Juan's experience..."
              ></textarea>
              <button type="submit" class="chat-submit">Send</button>
            </form>

            <!-- Where the ChatBot's reply is shown -->
            <div id="chat-response" class="chat-response"></div>
          </div>
          <p class="chat-footnote">
            Last updated: {profile.last_updated}
          </p>
          <p class="chat-footnote">Powered by Google's Gemini</p>
        </div>
      </section>
    </main>
    <ContactCTA />
  </div>

  <style>
    .chatbot {
      display: flex;
      flex-direction: column;
      gap: 3.5rem;
    }

    section {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      color: var(--gray-200);
    }

    .section-title {
      grid-column-start: 1;
      font-size: var(--text-xl);
      color: var(--gray-0);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .content {
      grid-column: 2 / 4;
    }

    .content-title {
      font-size: var(--text-lg);
      color: var(--gray-0);
      font-weight: 700;
    }

    .chat-footnote {
      font-size: var(--text-md);
      color: var(--gray-200);
      font-style: italic;
      margin-top: 1.5rem;
    }

    @media (min-width: 50em) {
      .chatbot {
        display: grid;
        grid-template-columns: 1fr 60% 1fr;
      }
      .chatbot > :global(:first-child) {
        grid-column-start: 2;
      }
      section {
        display: contents;
        font-size: var(--text-lg);
      }
    }

    .chat-icon {
      width: auto;
      height: auto;
      vertical-align: middle;
      border-radius: 1rem;
    }

    .chat-container {
      background: var(--gray-900);
      border-radius: 1rem;
      padding: 2rem;
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .chat-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .chat-form textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      border: 1px solid var(--gray-200);
      background: var(--gray-0);
      color: var(--gray-900);
      font-size: var(--text-md);
      resize: vertical;
      min-height: 3rem;
      line-height: 1.4;
    }
    .chat-form textarea::placeholder {
      color: var(--gray-200);
    }

    .chat-submit {
      align-self: flex-end;
      padding: 0.8rem 1.5rem;
      border: none;
      border-radius: 0.5rem;
      font-size: var(--text-md);
      font-weight: 600;
      cursor: pointer;
      background: #7611a6;
      color: #fff;
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease,
        background 0.2s ease;
      box-shadow: 0 4px 16px rgba(118, 17, 166, 0.4);
    }

    .chat-submit:hover {
      background: #8e2ec1;
      transform: translateY(-2px);
      box-shadow: 0 6px 24px rgba(142, 46, 193, 0.6);
    }

    .chat-submit:active {
      transform: translateY(0);
      box-shadow: 0 3px 8px rgba(118, 17, 166, 0.3);
    }

    .chat-submit:focus {
      outline: none;
      box-shadow:
        0 0 0 3px rgba(142, 46, 193, 0.5),
        0 6px 24px rgba(118, 17, 166, 0.6);
    }

    .chat-response {
      background: var(--gray-800);
      padding: 1rem;
      border-radius: 0.75rem;
      min-height: 3rem;
      line-height: 1.5;
      color: var(--gray-0);
    }
  </style>

  <script is:inline type="module">
    import { initChatBot } from '/src/scripts/chatbot.ts'
    initChatBot()
  </script>
</BaseLayout>
