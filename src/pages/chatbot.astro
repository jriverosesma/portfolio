---
import BaseLayout from '../layouts/BaseLayout.astro'

import ContactCTA from '../components/ContactCTA.astro'
import Hero from '../components/Hero.astro'
import profile from '../../netlify/functions/profile.json'
---

<BaseLayout
  title="Juan's personal ChatBot assistant"
  description="Personal ChatBot using Google's Gemini API and Netlify functions"
>
  <div class="stack gap-20">
    <main class="wrapper about">
      <header class="hero">
        <Hero
          title="ChatBot"
          tagline="I am Juan's personal ChatBot assistant."
          align="start"
        />
      </header>
      <section>
        <h1 class="section-title">
          <img src="/assets/chatbot.webp" alt="Chat icon" class="chat-icon" />
        </h1>
        <div class="content">
          <!-- Chat Container -->
          <div class="chat-container">
            <!-- The ChatBot UI -->
            <form id="chat-form" class="chat-form">
              <textarea
                id="message"
                name="message"
                required
                rows="3"
                placeholder="e.g. Tell me about Juan's experience..."
              ></textarea>
              <button type="submit" class="chat-submit">Send</button>
            </form>

            <!-- Where we show the chatbot's reply -->
            <div id="chat-response" class="chat-response"></div>
          </div>
          <p class="chat-footnote">
            Last updated: {profile.last_updated}
          </p>
          <p class="chat-footnote">Powered by Google's Gemini</p>
        </div>
      </section>
    </main>
    <ContactCTA />
  </div>

  <style>
    /* --- Existing about page styles --- */
    .about {
      display: flex;
      flex-direction: column;
      gap: 3.5rem;
    }

    section {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      color: var(--gray-200);
    }

    .section-title {
      grid-column-start: 1;
      font-size: var(--text-xl);
      color: var(--gray-0);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .content {
      grid-column: 2 / 4;
    }

    .content-title {
      font-size: var(--text-lg);
      color: var(--gray-0);
      font-weight: 700;
    }

    .chat-footnote {
      font-size: var(--text-md);
      color: var(--gray-200);
      font-style: italic;
      margin-top: 1.5rem;
    }

    @media (min-width: 50em) {
      .about {
        display: grid;
        grid-template-columns: 1fr 60% 1fr;
      }
      .about > :global(:first-child) {
        grid-column-start: 2;
      }
      section {
        display: contents;
        font-size: var(--text-lg);
      }
    }

    /* --- ChatBot-Specific Styles --- */

    .chat-icon {
      width: auto;
      height: auto;
      vertical-align: middle;
      border-radius: 1rem;
    }

    .chat-container {
      background: var(--gray-900);
      border-radius: 1rem;
      padding: 2rem;
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .chat-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    /* Style the textarea for user input */
    .chat-form textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      border: 1px solid var(--gray-200);
      background: var(--gray-0);
      color: var(--gray-900);
      font-size: var(--text-md);
      resize: vertical;
      min-height: 3rem;
      line-height: 1.4;
    }
    .chat-form textarea::placeholder {
      color: var(--gray-200);
    }

    /* The submit button */
    .chat-submit {
      align-self: flex-end;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 0.5rem;
      font-size: var(--text-md);
      font-weight: 600;
      cursor: pointer;

      /* If you have a --primary-500 color, you can use it here: */
      background: var(--primary-500);
      color: var(--gray-0);

      transition: background 0.2s ease;
    }
    .chat-submit:hover {
      filter: brightness(0.9);
    }

    /* The chat bubble for chatbot responses */
    .chat-response {
      background: var(--gray-800);
      padding: 1rem;
      border-radius: 0.75rem;
      min-height: 3rem;
      line-height: 1.5;
      color: var(--gray-0);
    }
  </style>

  <!-- The script to POST user input to your Netlify function -->
  <script>
    document
      .querySelector('#chat-form')
      .addEventListener('submit', async (e) => {
        e.preventDefault()

        const textarea = document.querySelector('#message')
        const message = textarea.value.trim()
        if (!message) return

        try {
          const res = await fetch('/.netlify/functions/chatbot', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message }),
          })
          const data = await res.json()
          document.getElementById('chat-response').textContent = data.reply
        } catch (err) {
          document.getElementById('chat-response').textContent =
            'Error: ' + (err.message || 'Unknown error')
        }

        textarea.value = ''
      })
  </script>
</BaseLayout>
